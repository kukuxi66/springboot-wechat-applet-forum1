/* pages/revise_pwd/revise_pwd.wxss */
.backdrop {
    width: 100%rpx;
    height: 600rpx;
    background: linear-gradient(to bottom left, #896894, #976178);
}

.login_card {

    height: 700rpx;
    width: 700rpx;
    background-color: white;
    position: absolute;
    top: 400rpx;
    left: 25rpx;
    border-radius: 30rpx;
    box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;

}

.login_input {
    margin-top: 120rpx;
    border: #896894 solid 3rpx;
}

.login_title {
    color: #896894;
    font-weight: 700;
    text-align: center;
    font-size: 60rpx;
    font-family: 幼圆;
    letter-spacing: 15rpx;
}

.login_button_box {
    width: 600rpx;
    margin: 370rpx auto 0 auto;
}

#login_button {
    background: linear-gradient(to bottom left, #896894, #976178);
    height: 100rpx;
    line-height: 100rpx;
    color: white;
    border-radius: 70rpx;
    box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
}

.login_button-hover {
    background: linear-gradient(to bottom left, #8e7696, #966d7e) !important;
    position: relative;
    top: 5rpx;
}

.login_operate {
    margin-top: 40rpx;
    display: flex;
    width: 600rpx;
    justify-content: space-between;
}

.login_operate1 {
    margin: 0 30rpx;
    color: #896894;
}

.login_operate2 {
    margin: 0 30rpx;
    color: rgb(125, 125, 125);
}